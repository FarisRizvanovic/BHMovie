<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BHMovie.View.Templates.CategoryItemTemplate">

    <ContentView.Resources>
        <ResourceDictionary>

            <Style
                x:Key="CategoryContainerStyle"
                TargetType="Border">
                <Setter
                    Property="StrokeShape"
                    Value="RoundRectangle 24" />
                <Setter Property="HeightRequest"
                        Value="40"/>

                <Setter
                    Property="Padding"
                    Value="10,4" />

            </Style>

            <Style
                x:Key="CatrgoryTextStyle"
                TargetType="Label">
                <Setter
                    Property="VerticalOptions"
                    Value="Center" />

                <Setter
                    Property="FontSize"
                    Value="16" />

               <Setter
                    Property="Margin"
                    Value="12,0" />

            </Style>

        </ResourceDictionary>

    </ContentView.Resources>


    <Border
        Style="{StaticResource CategoryContainerStyle}">
        <Label
            Style="{StaticResource CatrgoryTextStyle}"
            Text="{Binding}" />

    </Border>


</ContentView>

